{
  "type": "kafka",
  "dataSchema": {
    "dataSource": "metrics-kafka",
    "parser": {
      "type": "string",
      "parseSpec": {
        "format": "json",
        "timestampSpec": {
          "column": "timestamp",
          "format": "auto"
        },
        "dimensionsSpec": {
          "dimensions": [
            { "name" : "server_id", "type" : "string" },
            { "name" : "timestamp", "type" : "string" },
            { "name" : "cpu_usage", "type" : "long" },
            { "name" : "memory_utilization", "type" : "long" },
            { "name" : "temperature", "type" : "long" },
            { "name" : "disk_usage", "type" : "long" },
            { "name" : "io_usage", "type" : "long" }
          ]
        }
      }
    },
    "granularitySpec": {
      "type": "uniform",
      "segmentGranularity": "HOUR",
      "queryGranularity": "NONE"
    }
  },
  "tuningConfig": {
    "type": "kafka",
    "maxRowsPerSegment": 5000000
  },
  "ioConfig": {
    "topic": "test",
    "consumerProperties": {
      "bootstrap.servers": "35.211.13.141:9092,35.211.21.153:9092,35.211.37.39:9092"
    },
    "taskCount": 1,
    "replicas": 1,
    "taskDuration": "PT1H"
  }
}
